<div class="container mt-4">
  <div class="card shadow-sm p-4">
    <h2 class="text-danger text-center">Request Blood</h2>

    <%= form_with model: @blood_request, local: true, class: "mt-3" do |f| %>
      
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      
      <div class="mb-3">
        <%= f.label :blood_group, class: "form-label" %>
        <%= f.select :blood_group, Donation::BLOOD_GROUPS, { prompt: "Select Blood Group" }, class: "form-select", required: true %>
      </div>
      
      <div class="mb-3">
        <%= f.label :location, class: "form-label" %>
        <%= f.text_field :location, class: "form-control", required: true %>
      </div>

      <div class="d-grid">
        <%= f.submit "Request Blood", class: "btn btn-danger" %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
