<div class="container mt-4">
  <div class="card shadow-sm p-4">
    <h2 class="text-danger text-center">Accept Blood Request</h2>

    <div class="alert alert-info">
      <p><strong>Requester:</strong> <%= @request.name %></p>
      <p><strong>Blood Group:</strong> <%= @request.blood_group %></p>
      <p><strong>Location:</strong> <%= @request.location %></p>
    </div>

    <h3 class="text-primary">Send Your Contact Details</h3>
    <%= form_with url: send_details_blood_request_path(@request), method: :post, class: "mt-3" do |f| %>
      
      <div class="mb-3">
        <%= f.label :mobile, "Your Mobile Number", class: "form-label" %>
        <%= f.text_field :mobile, required: true, class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.label :location, "Your Location", class: "form-label" %>
        <%= f.text_field :location, required: true, class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Send Details and Accept Request", class: "btn btn-success" %>
      </div>
      
    <% end %>
    <%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>

  </div>
</div>
